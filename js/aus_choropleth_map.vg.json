{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Fires in Australia",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://github.com/cpas0004/FIT3179vis2/blob/main/js/AusStates.json",
    "format": {"type": "json"}
  },
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "https://github.com/cpas0004/FIT3179vis2/blob/main/data/fires.csv"
        },
        "key": "State",
        "fields": ["Fires"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Number of Fires",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1, 5, 10, 20],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
      {"field": "Fires", "type": "quantitative"}
    ]
  }
 }